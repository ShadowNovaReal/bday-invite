      <div class="container">
        <div class="jumbotron">
            <h1 class="display-3">Who I'm Inviting?</h1>
            <p class="lead">Who I'm inviting is below.</p>
              <table class="table table-cover">
                <thead>
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.filter(u => u.name !== '').array().sort().splice(0, 100).forEach(data => { %>
                    <tr class="table-light">
                      <th scope="row"><%= data.name %></th>
                      <td><%= data.age %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
    </div>

